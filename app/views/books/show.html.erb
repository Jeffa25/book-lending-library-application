<h1><%= @book.title %></h1>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>

<% if @book.borrowings.where(returned_at: nil).exists? %>
  <p>Status: Borrowed</p>
<% else %>
  <%= button_to "Borrow", borrow_book_path(@book), method: :post %>
<% end %>

<%= link_to "Back to Books", books_path %>